<%- include("header") -%>
  <div class="box" id="heading" >
  <h1><%= params.listTitle %></h1>
  </div>
  <div class="box">
      <%params.items.forEach(element=>{%>
        <form class="item" action="/delete" method="post">
    <div class="item">
        <input type="checkbox" name="checkbox" value="<%= element._id %>" onchange="this.form.submit()" >
        <input type="hidden" name="list_name" value="<%= params.listTitle %>"></input>
        <p><%= element.name %></p>
    </div>
  </form>
      <%})%>

      <form class="item" action="/" method="post">
        <input type="text" name="item" id="item" placeholder="New Item" autocomplete="off"/>
        <button type="submit" name="list" value= "<%= params.listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
